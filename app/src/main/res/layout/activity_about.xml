<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="tab_indicator_bg_primary_color"
    tools:context="com.audioplayer.best.musicplayer.activities.AboutActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />
        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:isScrollContainer="true"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/about_marging_right"
                android:layout_marginLeft="@dimen/about_marging_left"
                android:layout_marginRight="@dimen/about_marging_right"
                android:layout_marginStart="@dimen/about_marging_left"
                android:orientation="vertical">

                <include
                    android:id="@+id/include_sliding_panelchildone"
                    layout="@layout/gruop_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/about_marging_bottom"
                    android:layout_marginTop="@dimen/about_marging_top" />

                <include
                    android:id="@+id/include_sliding_panelchildone"
                    layout="@layout/group_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/about_marging_bottom" />


                <include
                    android:id="@+id/include_sliding_panelchildone"
                    layout="@layout/group_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/about_marging_bottom" />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</FrameLayout>
